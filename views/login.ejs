<html>


<head>
<%- include('../views/partials/header.ejs') %>
</head>

<body>
<style>

.spacing {
  margin-top: 150px;
}

div.topleft {
  position: absolute;
  top: 5px;
  left: 16px;
}

</style>

<div class="topleft">
  <h1 class="font-twitter">NQT</h1>
</div>

<div class="spacing">

<center>
  <form class="clean-form">
    <label for="uname">Username</label><br><br>
  <input class="clean-input-1-3" id="uname" type="text" placeholder="Username"><br><br>
  <label for="pword">Password</label><br><br>
  <input class="clean-input-1-3" type="password" id="pword" type="text" placeholder="Password"><br><br>
 </form>

  <button onClick="loginClick()" class="clean-button clean-button--xl clean-button--primary clean-button--green tooltip tooltip--right" data-tooltip="Get Started!">Login</button>
</center>
</div>

</body>

<script>
function loginClick() {
  var username = document.getElementById("uname").value;
  var password = document.getElementById("pword").value;
  if (username == "" || password == "") {
    popupS.alert({
      content: 'Missing Required Forms!'
    });
  }else{
  window.location.replace("http://" + window.location.hostname + "/auth/" + username + "/" + password);
  }
}

</script>

</html>
